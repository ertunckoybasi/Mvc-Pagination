@using WebMvcPagination.ViewModels
@model PagedList.Core.IPagedList<Product>
@addTagHelper *,PagedList.Core.Mvc

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>In this example , used PageList.Core.Mvc</p>
</div>

<div>
    <table class="table table-bordered table-responsive table-hover">
        <tr>
            <th>ID</th>
            <th>Product Name</th>
            <th>Category</th>
            <th>Description</th>
            <th>Price</th>
            <th>PriceUri</th>
        </tr>

        @foreach (Product item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Category</td>
                <td>@item.Description</td>
                <td>@item.Price</td>
                <td>@item.PictureUri</td>
            </tr>
        }
        <tr>
            <td colspan="3" align="center">
                <pager list="@Model" asp-controller="Home" asp-action="Index2" />
            </td>
        </tr>
    </table>

</div>




